<div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <div class="row">
          <div class="col-sm-3">
          <i class="fa fa-automobile logo" style="font-size:48px;color:blue"></i>
          </div>
          <div class="col-sm-6">
          <h3 class="text-center">
              Account Register
          </h3>
          </div>
       </div>
       <form action="/users/register" method="post">
          <div class="form-group">
              <label for="Name">Name:</label>
              <input type="text" class="form-control" required name="name"value="{{name}}">
          </div>
          <div class="form-group">
              <label for="email">Email</label>
              <input type="email"  name="email" class="form-control" required value="{{email}}">
          </div>
           <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required value="{{password}}">
          </div>
           <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input type="password" class="form-control" name="password2" required value="{{password2}}">
          </div>
          <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      </div>
    </div>
</div>